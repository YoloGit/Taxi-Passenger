<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chaos.taxi"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <uses-library android:name="com.google.android.maps" />

        <activity
            android:label="@string/app_name"
            android:name=".activity.TaxiActivity" >
        </activity>
        <activity android:name=".activity.LoginActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.RegisterActivity" >
        </activity>
        <activity
            android:name=".activity.WaitTaxiActivity"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".activity.CallTaxiCompleteActivity"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".activity.LoginNoticeActivity"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity android:name=".activity.HistoryActivity" >
        </activity>
        <activity
            android:name=".activity.HistoryDetailActivity"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
    </application>

</manifest>